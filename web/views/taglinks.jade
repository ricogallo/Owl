extends layout

include mixins/linkEntry

block content
  .row-fluid
    .span2
      h1(style='display: inline; margin-bottom: 20px')= tag
      form.pull-right(method='post', action=!~usertags.indexOf(tag) ? '/subscribe/'+tag : '/unsubscribe/'+tag)
        input(type='hidden', name='_csrf', value=csrf)
        if !~usertags.indexOf(tag)
          button.btn.btn-small.btn-success(type='submit', style='margin-top: 9%') Subscribe
        else
          button.btn.btn-small.btn-danger(type='submit', style='margin-top: 9%') Unsubscribe

  for link in links
    if link
      = linkEntry_mixin(link, link.get('user'))
