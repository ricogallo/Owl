  body
    div.navbar.navbar-fixed-top
      div.navbar-inner
        div.container
          a.brand(href="/")
            span(style='color: #5BB75B') Î±
            | &nbsp;urlship
          ul.nav.pull-right
            li
              a(href="#") About
            if !user
              li
                a(href="/sign_up") Sign Up
              li
                a(href="/login") Login
            else
              li
                a(href="/logout") Logout
    div.container
      div.row
        if user
          include rightMenu
          .span9
            .well.fromtop
              block content
        else
          if landing
            div.span12
              div.fromtop
                block content
          else
            div.span4.offset4
              div.well.fromtop
                block content
    div.navbar.navbar-fixed-bottom
      .navbar-inner
        .container
          ul.nav
            li
              a(style='color: white !important; text-shadow: none') Version: #{VERSION}
          ul.nav.pull-right
            li
              a.footer-button(href='https://twitter.com/urlship') 
                i.icon-twitter-sign
            li
              a.footer-button(href='https://github.com/urlship')
                i.icon-github
