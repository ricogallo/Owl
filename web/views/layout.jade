doctype 5
html
  head
    meta(charset="utf-8")
    title Urlship
    meta(name="viewport",content="width=device-width, initial-scale=1.0")
    meta(name="description",content="")
    meta(name="author",content="")
    meta(http-equiv="X-UA-Compatible",content="IE=edge,chrome=1")

    link(rel="stylesheet", href="/css/bootstrap.css")
    link(rel='stylesheet', href='/css/msft-metro-buttons.css')
    link(href="/css/mystyle.css",rel="stylesheet")
    link(href="http://fonts.googleapis.com/css?family=Oleo+Script:400,700|Concert+One|Ropa+Sans",rel="stylesheet",type="text/css")

    script(src="http://cdnjs.cloudflare.com/ajax/libs/jquery/1.7.2/jquery.min.js")
    script(src="http://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.0.4/bootstrap.min.js")
    script(src="http://cdnjs.cloudflare.com/ajax/libs/jquery-textext/1.3.0/jquery.textext.min.js")
    script(src="js/jquery.validate.min.js")
    script(src='js/m-dropdown.js')
    script(src='m-radio.js')
    script(src="js/frontend.js")

  body
    div.navbar.navbar-fixed-top
      div.navbar-inner
        div.container
          ul.nav
            li#mylogo
              a.brand(href="/") urlship
          div(style="text-align: center")
            form.navbar-search.offset3
              div.input-prepend
                input.search-query(type="text",placeholder="Search...")
                span.add-on
                  i.icon-search
          ul.nav.pull-right
            li
              a(href="#") About
            if !user
              li
                a(href="/sign_up") Sign Up
              li
                a(href="/login") Login
            else
              li
                a(href="/logout") Logout
    div.container
      div.row
        if user
          .span9
            .well.fromtop
              block content
          include rightMenu
        else
          div.span12
            div.well.fromtop
              block content
        div#footer.span12
          span= VERSION
