<form method="post" action="/app">
  <fieldset>
    <div class="control-group">
      <label class="control-label">App name: </label>
      <div class="controls">
        <input type="text" class="input-xlarge" name="name"><br />
      </div>
    </div>
    <div class="control-group">
      <label class="control-label">URI: </label>
      <div class="controls">
        <input type="text" class="input-xlarge" name="uri"><br />
      </div>
    </div>
    <div class="form-actions">
      <button type="submit" class="btn btn-primary">Sign Up</button>
    </div>
  </fieldset>
</form>