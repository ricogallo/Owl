<form action="/sign_up" method="post" class="form-horizontal">
  <fieldset>
    <div class="control-group">
      <label class="control-label" for="usr">Username</label>
      <div class="controls">
        <input type="text" class="input-xlarge" name="username" id="usr">
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="pwd">Password</label>
      <div class="controls">
        <input type="password" class="input-xlarge" name="password" id="pwd">
      </div>
    </div>
    <div class="form-actions">
      <button type="submit" class="btn btn-primary">Sign Up</button>
    </div>
  </fieldset>
</form>